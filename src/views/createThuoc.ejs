<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Tạo thuốc</title>

  <!-- Custom fonts for this template-->
  <link href="./vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

  <!-- Custom styles for this template-->
  <link href="./css/form_HSBN.css" rel="stylesheet">
  <link href="./css/sb-admin-2.min.css" rel="stylesheet">
  <link rel="stylesheet" href="./css/jquery.toast.min.css">

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <%- include("./partials/sidebar") -%>

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

          <%- include("./partials/navbar") -%>

            <!-- Begin Page Content -->
            <div class="container-fluid">

              <!-- Page Heading -->
              <h1 class="h3 mb-4 text-gray-800">Tạo Thuốc</h1>
              <div class="container mt-3 mb-3">
                <form method="POST" id="form_Thuoc">
                  <div class="row box8">
                    <div class="col-sm-4 form-group">
                      <label for="TENTHUOC">Tên Thuốc</label>
                      <input type="text" class="form-control" name="TENTHUOC" id="TENTHUOC" placeholder="Nhập tên thuốc"
                        required>
                    </div>

                    <div class="col-sm-4 form-group">
                      <label for="HSD">Hạn Sử Dụng</label>
                      <input type="date" class="form-control" name="HSD" id="HSD" placeholder="Nhập hạn sử dụng"
                        required>
                    </div>

                    <div class="col-sm-4 form-group">
                      <label for="DONGIA">Đơn Giá</label>
                      <input type="number" class="form-control" name="DONGIA" id="DONGIA" placeholder="Nhập đơn giá"
                        required>
                    </div>

                    <div class="col-sm-6 form-group">
                      <label for="SL">Số Lượng</label>
                      <input type="number" class="form-control" name="SL" id="SL" placeholder="Nhập số lượng"
                        required>
                    </div>

                    <div class="col-sm-6 form-group">
                      <label for="NSX">Nhà Sản Xuất</label>
                      <input type="text" class="form-control" name="NSX" id="NSX" placeholder="Nhập nhà sản xuất"
                        required>
                    </div>

                    <div class="col-sm-6 form-group">
                      <label for="CONGDUNG">Công Dụng</label>
                      <textarea type="text" class="form-control" name="CONGDUNG" id="CONGDUNG"
                        placeholder="Nhập công dụng" required></textarea>
                    </div>

                    <div class="col-sm-6 form-group">
                      <label for="CHONGCHIDINH">Chống Chỉ Định</label>
                      <textarea type="text" class="form-control" name="CHONGCHIDINH" id="CHONGCHIDINH"
                        placeholder="Nhập chống chỉ định" required></textarea>
                    </div>

                    <div class="col-sm-6 form-group">
                      <label for="TACDUNGPHU">Tác Dụng Phụ</label>
                      <textarea type="text" class="form-control" name="TACDUNGPHU" id="TACDUNGPHU"
                        placeholder="Nhập tác dụng phụ" required></textarea>
                    </div>

                    <div class="col-sm-6 form-group">
                      <label for="HDSD">Hướng Dẫn Sử Dụng</label>
                      <textarea type="text" class="form-control" name="HDSD" id="HDSD"
                        placeholder="Nhập hướng dẫn sử dụng" required></textarea>
                    </div>

                    <div class="col-sm-12 form-group mb-0">
                      <div class="btn btn-primary float-right" onclick="submitForm()">Tạo thuốc</div>
                    </div>

                  </div>
                </form>
              </div>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <%- include("./partials/footer") -%>


      </div>
      <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <%- include("./partials/scrollToTopBtn") -%>

    <!-- Bootstrap core JavaScript-->
    <script src="./vendor/jquery/jquery.min.js"></script>
    <script src="./vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="./vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="./js/sb-admin-2.min.js"></script>
    <script src="./js/jquery.toast.min.js"></script>
    <script src="./js/createThuoc.js"></script>

</body>

</html>