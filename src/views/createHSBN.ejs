<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Tạo hồ sơ bệnh nhân</title>

    <!-- Custom fonts for this template-->
    <link href="./vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="./css/form_HSBN.css" rel="stylesheet">
    <link href="./css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include("./partials/sidebar") -%>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <%- include("./partials/navbar") -%>

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800">Tạo Hồ Sơ Bệnh Nhân</h1>
                    <div class="container mt-3">
                        <form action="/createHSBN" method="POST" id="form_HSBN">
                          <div class="row box8">

                            <input type="hidden" id="MAKH" name="MAKH" value="<%=user.ID%>">
                            <input type="hidden" id="LOAITK" name="LOAITK" value="<%=user.LOAITK%>">

                            <div class="col-sm-12 form-group">
                              <label for="HOTENBN">Họ Tên Bệnh Nhân</label>
                              <input type="text" class="form-control" name="HOTENBN" id="HOTENBN" placeholder="Nhập họ tên bệnh nhân" required>
                            </div>
                    
                            <div class="col-sm-4 form-group">
                              <label for="NGAYSINH">Ngày Sinh</label>
                              <input type="Date" name="NGAYSINH" class="form-control" id="NGAYSINH" placeholder="" required>
                            </div>
                    
                            <div class="col-sm-4 form-group">
                              <label for="GIOITINH">Giới Tính</label>
                              <select id="GIOITINH" name="GIOITINH" class="form-control browser-default custom-select">
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                              </select>
                            </div>
                    
                            <div class="col-sm-4 form-group">
                                <label for="SDTBN">Số Điện Thoại</label>
                                <input type="SDTBN" name="SDTBN" class="form-control" id="SDTBN" placeholder="Nhập số điện thoại để liên hệ" required>
                            </div>
                    
                            <div class="col-sm-12 form-group">
                                <label for="DIACHIBN">Địa chỉ</label>
                                <input type="DIACHIBN" class="form-control" name="DIACHIBN" id="DIACHIBN" placeholder="Nhập địa chỉ" required>
                            </div>  
                    
                            <div class="col-sm-6 form-group">
                                <label for="TTSUCKHOE">Tình Trạng Sức Khoẻ</label>
                                <textarea class="form-control" name="TTSUCKHOE" id="TTSUCKHOE" placeholder="Nhập tình trạng sức khoẻ"></textarea>
                            </div> 

                            <div class="col-sm-6 form-group">
                                <label for="TTDIUNG">Tình Trạng Dị Ứng</label>
                                <textarea class="form-control" name="TTDIUNG" id="TTDIUNG" placeholder="Nhập tình trạng dị ứng"></textarea>
                            </div> 
                      
                            <div class="col-sm-12 form-group mb-0">
                              <button type="submit" class="btn btn-primary float-right">Tạo hồ sơ</button>
                            </div>
                      
                          </div>
                        </form>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <%- include("./partials/footer") -%>


        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <%- include("./partials/scrollToTopBtn") -%>

    <!-- Bootstrap core JavaScript-->
    <script src="./vendor/jquery/jquery.min.js"></script>
    <script src="./vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="./vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="./js/sb-admin-2.min.js"></script>

</body>

</html>