<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Tạo hồ sơ bệnh nhân</title>

  <!-- Custom fonts for this template-->
  <link href="./vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

  <!-- Custom styles for this template-->
  <link href="./css/form_HSBN.css" rel="stylesheet">
  <link href="./css/sb-admin-2.min.css" rel="stylesheet">
  <link href="./css/jquery.flexdatalist.min.css" rel="stylesheet">
  <link href="./css/jquery.toast.min.css" rel="stylesheet">

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <%- include("./partials/sidebar") -%>

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

          <%- include("./partials/navbar") -%>

            <!-- Begin Page Content -->
            <div class="container-fluid">

              <!-- Page Heading -->
              <h1 class="h3 mb-4 text-gray-800">Thêm đơn thuốc</h1>
              <div class="container mt-3">
                <form id="form_DonThuoc">
                  <div class="row box8">
                    <input type="hidden" name="MAKHDIEUTRI" id="MAKHDIEUTRI" value = "<%=MAKHDIEUTRI%>">
                    
                    <div class="col-sm-12 row">
                      <div class="col-sm-5 form-group">
                        <label for="MATHUOC">Chọn thuốc</label>
                        <input type="text" class="form-control flexdatalist" name="MATHUOC[]" id="MATHUOC" placeholder="Chọn thuốc" required>
                      </div>

                      <div class="col-sm-5 form-group">
                        <label for="SOLUONG">Số lượng</label>
                        <input type="number" class="form-control" id="SOLUONG" name="SOLUONG[]" min="1" max="100" required>
                      </div>
                      <div class="col-sm-2 input-group-btn">
                        <button class="btn btn-success" type="button" onclick="education_fields();"> <span
                            class="fa fa-plus" style="text-align: center" aria-hidden="true"></span> </button>
                      </div>
                    </div>
                    <div class="clear"></div>
                    <div class="col-sm-12 row" id="education_fields"></div>
                    <div class="col-sm-12 form-group">
                      <label for="GHICHU">Ghi chú</label>
                      <input type="GHICHU" name="GHICHU" class="form-control" id="GHICHU" placeholder="Nhập ghi chú" required>
                    </div>
                    <div class="col-sm-12">
                      <div class="float-right">
                        <button class="btn btn-primary"onclick="submitForm(event)">Thêm đơn thuốc</button>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>

            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <%- include("./partials/footer") -%>


      </div>
      <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <%- include("./partials/scrollToTopBtn") -%>

    <!-- Bootstrap core JavaScript-->
    <script src="./vendor/jquery/jquery.min.js"></script>
    <script src="./vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="./vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="./js/sb-admin-2.min.js"></script>
    <script src="./js/jquery.toast.min.js"></script>
    <script src="/js/jquery.flexdatalist.min.js"></script>
    <script src="./js/addDonThuoc.js"></script>


</body>

</html>